body{
	background-image: url(Images/background-image.jpg);
	background-size: cover;
	height: 100vh;
	background-position: center;
}

.login-page{
	width:400px;
	margin:auto;
	padding: 10% 0 0;
}

.form{
	position: relative;
	z-index: 1;
	background: rgba(0,0,0,.8);
	max-width: 360px;
	margin: 0 auto 100px;
	padding: 45px;
	text-align:center;
}

.form input{
	font-family:"Roboto",  sans-serif;
	outline: 1;
	background:#EEEEEE;
	width: 100%;
	border: 0;
	margin: 0 0 15px;
	padding: 15px;
	box-sizing: border-box;
	font-size: 14px;
    border-radius: 10px;
}

.form button{
	font-family: "Roboto", sans-serif;
	text-transform: uppercase;
	outline: 0;
	background: #21325E;
	width: 100%;
	borde: 0;
	padding: 15px;
	color: white;
	font-size: 14px;
	cursor: pointer;
    border-radius: 10px;
}

.form button:hover,.form button:active{
	background: #42C2FF;
}

.form .message{
	margin: 15px 0 0;
	color: aliceblue;
	font-size: 12px;
}

.form .message a{
	color: #4CAF50;
	text-decoration: none;
}

.form .register-form{
	display: none;
}
